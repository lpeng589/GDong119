@charset "utf-8";
/* CSS Document */
*{margin:0; padding:0; border:0; list-style-type:none; font-family: "微软雅黑","宋体"}
body{background: #f5f5f5;}
img{display: block;}
a{text-decoration: none;}
.head-nav{width: 90%; overflow: hidden; padding: 0 5%; border-bottom: 1px solid #cccccc; background: #fff;	}
.head-nav ul{width: 100%; overflow: hidden; display: flex; justify-content: space-between;}
.head-nav li{width: 20%; overflow: hidden; border-bottom: 4px solid #fff; text-align: center; padding: 5% 0; font-size: 16px;}
.head-nav li.active{width: 20%; overflow: hidden; border-bottom: 4px solid #a50000; color: #a50000;}
.content{width: 100%; overflow: hidden; }
.content .content-ul>li{width: 92%; overflow: hidden; background: #fff; padding: 3% 4%; margin-bottom: 3%; position: relative;}
.content-ul>li h3{font-weight: normal; font-size: 16px; color: #333333; margin-bottom: 3%;}
.content-ul>li .detail{color: #888888; font-size: 12px; display: flex; line-height: 17px;}
.content-ul>li .detail .time{margin-right: 10px;}
.content-ul>li .detail i{color: #af1d1d; font-size: 12px; margin-right: 3px;}
.content-ul>li ul{display: flex; overflow: hidden; margin: 3% 0;}
.content-ul>li ul li{width: 19%; margin-right: 1%;}
.content-ul>li ul li img{width: 100%; border-radius: 8px;}
.content-ul>li p{font-size: 16px; color: #333333;}
.content-ul>li .type{padding: 3px 10px; color: #fff; background: #c30000; border-radius: 14px; display: inline; font-size: 14px; position: absolute; top: 5%; right: 5%;}

.content-box{width: 100%; overflow: hidden; background: #fff;}
.head-title{width: 92%; padding:3% 4%; overflow:hidden; display: flex; justify-content: space-between; border-bottom: 1px solid #ccc;}
.content-box i{color: #af1d1d; margin-right: 3px}
.author-one{margin-right: 20px;}
.author-img,.author-detail,.author,.author-text,.author-time,.author-local{width: 92%; padding:0% 4%; overflow:hidden; margin-top: 3%;}
.author-img ul{display: flex; overflow: hidden; }
.author-img ul li{width: 19%; margin-right: 1%;}
.author-img ul li img{width: 100%; border-radius: 8px;}
.author-detail{display: flex;}
.author-text{line-height: 28px; padding-bottom: 3%;}
.modify-type{width: 92%; padding:3% 4%; overflow:hidden; display: flex; justify-content: space-between; }
.input-area{width: 92%; padding:3% 4%; overflow:hidden; background: #fff;}
textarea{width: 100%; resize: none; line-height: 28px; font-size: 16px;}
.btn{padding: 5px 20px; color: #fff; background: #ccc; float: right; border-radius: 14px; display: inline; font-size: 16px; margin-top: 10px; }
.modify-list{width: 92%; padding:3% 4%; overflow:hidden; background: #fff;}
.modify-list li{display: flex; }
.modify-list .modify-time{width: 20%; position: relative; border-right: 1px solid #cccccc;}
.modify-detail{display: flex;}
.modify-author{margin-right: 15px;}
.modify-list .modify-content{width: 70%; margin-left: 10%;}
.modify-list .modify-content h4{font-weight: normal;}
.modify-detail{color: #666; margin:5% 0;}
.modify-list p{color: #888; padding-bottom: 5%;}
.circle-one{width: 19px; height: 19px; border:1px solid #e7e7e7; border-radius: 50%; background: #fff; position: absolute; top:0; right: -11px; display: flex; justify-content: center; align-items: center;} 
.circle-two{width: 12px; height: 12px; background: #ccc; border-radius: 50%;}
.mask{
	position: fixed;
	top:0;
	left:0;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,.6);
	z-index: 9999;
}
.popout{
	z-index: 10000;
}